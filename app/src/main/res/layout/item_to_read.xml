<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="4dp"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/book_image_ToRead"
        android:layout_width="95dp"
        android:src="@drawable/ic_image_default"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_book_ToRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="livro"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_image_ToRead"/>

    <TextView
        android:id="@+id/txt_authors_ToRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:hint="autor"
        android:maxLines="1"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_book_ToRead"/>

    <ImageView
        android:id="@+id/image_isfavorite_To_Read"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/favorite_image_background"
        android:src="@drawable/ic_favorite_main"
        android:visibility="invisible"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>