<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="115dp"
    android:layout_height="217dp">


    <ImageView
        android:id="@+id/book_image_BookRead"
        android:layout_width="95dp"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_image_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_book_BookRead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="livro"
        android:maxLines="1"
        android:layout_marginTop="6dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_image_BookRead" />

    <TextView
        android:id="@+id/txt_authors_BookRead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="autor"
        android:maxLines="1"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_book_BookRead" />

    <RatingBar
        android:id="@+id/rating_bar_BookRead"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="#FFEB3B"
        android:scaleX="1.3"
        android:scaleY="1.4"
        android:stepSize="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_authors_BookRead" />

    <ImageView
        android:id="@+id/image_isfavorite_Read"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/favorite_image_background"
        android:src="@drawable/ic_favorite_main"
        android:visibility="invisible"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>